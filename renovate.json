{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:automergeMonthly",
    "schedule:monthly"
  ],
  "packageRules": [
    {
      "groupName": "{{manager}}",
      "matchPackageNames": [
        "*"
      ]
    },
    {
      "matchPackageNames": [
        "/tracing-subscriber/"
      ],
      "enabled": false
    }
  ],
  "semanticCommitType": "chore",
  "automerge": true,
  "automergeStrategy": "merge-commit"
}